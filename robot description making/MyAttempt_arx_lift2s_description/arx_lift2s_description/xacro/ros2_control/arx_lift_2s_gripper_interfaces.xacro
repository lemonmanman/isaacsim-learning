<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- ARX LIFT 2S 夹爪关节接口宏定义 -->
    <xacro:macro name="arx_lift2s_gripper_interfaces" params="name">
        <xacro:arg name="gazebo" default="false"/>
        <xacro:property name="prefix" value="${name}_"/>

        <!-- 夹爪主关节接口定义 -->
        <joint name="${prefix}gripper_joint">
            <command_interface name="position"/>
            <state_interface name="position">
                <param name="initial_value">0.0</param>
            </state_interface>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>

        <xacro:if value="$(arg gazebo)">
            <!-- 第二个夹爪关节接口（仅状态接口） -->
            <xacro:if value="${prefix == 'left_'}">
                <joint name="${prefix}joint18">
                    <state_interface name="position"/>
                    <state_interface name="velocity"/>
                    <state_interface name="effort"/>
                </joint>
            </xacro:if>

            <xacro:if value="${prefix == 'right_'}">
                <joint name="${prefix}joint28">
                    <state_interface name="position"/>
                    <state_interface name="velocity"/>
                    <state_interface name="effort"/>
                </joint>
            </xacro:if>
        </xacro:if>

    </xacro:macro>

</robot>